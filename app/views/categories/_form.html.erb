<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, for: "exampleFormControlInput1", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", id: "exampleFormControlInput1", placeholder: "Category name" %>
  </div>

  <div class="mb-3">
    <%= form.label :details, for: "exampleFormControlTextarea1", class: "form-label" %>
    <%= form.text_area :details, class: "form-control", id: "exampleFormControlTextarea1", rows: "3", placeholder: "Details of the category" %>
  </div>

  <div class="mb-3">
    <%= form.submit :class => 'btn btn-primary mt-1 mb-3' %>
  </div>
<% end %>
