<div class="w-50 mx-auto">
<p style="color: green"><%= notice %></p>

<%= render @category %>

<div>
  <%= link_to "Edit this category", edit_category_path(@category), class:"btn btn-primary mt-1 mb-3", role: "button" %>
  <%= link_to "Back to categories", categories_path, class:"btn btn-primary mt-1 mb-3", role: "button" %>
  <%= link_to "Show tasks", category_tasks_path(@category), class:"btn btn-primary mt-1 mb-3", role: "button" %>
  <%= button_to "Destroy this category", @category, method: :delete, class:"btn btn-danger mt-1 mb-3", form: {style: 'display:inline-block;'} %>
</div>
</div>