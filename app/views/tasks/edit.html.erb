<%= form_with model: [@category, @task], scope: :task, url: category_task_path(@category.id), method: :patch, local: true do |f| %>
    
    <%= f.label 'Tasks Title' %><br>
    <%= f.text_field :name %><br>

    <%= f.label 'Category Details' %><br>
    <%= f.text_area :details %><br>

    <%= f.submit "Edit Task" %>
<% end %>